mixin ip-market-header
	.ip-market__header&attributes(attributes)
		p.font--lg.font--white Favourite
		ul.ip-market__wrap
			li.font--m-white.ip-market__link.ip-market__link--active All events
			li.font--m-white.ip-market__link Live Streaming
		ul.ip-market__wrap
			li.font--m-white.ip-market__link.ip-market__link--active All Markets
			li.font--m-white.ip-market__link.link-dropdown Main Markets
				.dropdown
					ul.dropdown__wrap.scroll
						li.dropdown__item
							a.font.font--m-white.dropdown__link.dropdown__link--active Main Markets
						li.dropdown__item
							a.font.font--m-white.dropdown__link 1st half Asians
						li.dropdown__item
							a.font.font--m-white.dropdown__link Full Time Asians

mixin ip-market-alert
	.ip-market__alert&attributes(attributes)
		.text-center
			p.font--white.font--lg Add your favourite events and competitions.
			p.font--white Click on a star for the item to appear here.

mixin ip-market-league(val)
	.ip-market__league&attributes(attributes)
		.ip-market__left
			img(src="../img/icon-country/gb.png", alt="").ip-market__flag
			p.text-ellipsis.font--white England National League
		.ip-market__center
			if (val)
				- var a = 0;
				while a < val
					.ip-market__label
						p.font--white= a+++"X"
		.ip-market__right
			a.fal.fa-star.ip-market__icon
				
