mixin ip-market-body-big(val, top, number, only, tennis, disabled, radio)
	.ip-market__body&attributes(attributes)
		.ip-market__table
			if (only!=false)
				.ip-market__left
					.ip-market__time.text-center
						p 105:31
						p.font--fifth 2 nd
					.ip-market__info
						p.team-name.team-name--home.text-ellipsis Everton 
						p.team-name.team-name--away.text-ellipsis Man City
						p.team-name.text-ellipsis Draw
					.ip-market__score
						if (tennis)
							.tennis-ss
								.tennis-ss__column
									p.font--bold.font--fifth 7
									p.font--bold.font--fifth 5
								.tennis-ss__column
									p.font--bold.font--fifth 7
									p.font--bold.font--fifth 5
								.tennis-ss__column
									p.font--bold.font--fifth 7
									p.font--bold.font--fifth 5
								.tennis-ss__column
									p.font--bold 0
									p.font--bold 15
						else
							p.font--bold.font--fifth.team-score.text-right 1
							p.font--bold.font--fifth.team-score.text-right 1

					.ip-market__option
						.s-icon.s-icon--play
						.s-icon.s-icon--field

			.ip-market__center
				if (top)
					.ip-market__block
						.link-dropdown Main Markets
							.dropdown
								ul.dropdown__wrap.scroll
									li.dropdown__item
										a.dropdown__link.dropdown__link--active Main Markets
									li.dropdown__item
										a.dropdown__link 1st half Asians
									li.dropdown__item
										a.dropdown__link Full Time Asians
				.ip-market__row
					if(disabled)
						.ip-market__label
							- var n = 0;
								while n < val
									+button-coff(n++).ip-market__btn.ip-market__btn--disabled
					- var a = 0;
						while a < number
							.ip-market__label(data=a++)
								- var n = 0;
								if(!radio)
									while n < val
										+button-coff(n++).ip-market__btn
								else
									while n < val
										.btn.ip-market__btn.ip-market__btn--small.ip-market__btn--left.ip-market__btn--b-none
											input(type="checkbox", data=n++).checkbox
											a.text-ellipsis.ip-market__coupon-link England Premiere League
			
			if (only!=false)
				.ip-market__right
					a.fal.fa-star.ip-market__icon
					a.ip-market__more
						span 152
						i.fal.fa-angle-right.ip-competition__icon

